page {
  box-sizing: border-box;
}
.flex{
  display: flex;
}
.grid{
  display: grid;
}
.text{
  font-size: 1em;
}
.big-text{
  font-size: 1.5em;
}
.small-text{
  font-size: 0.8em;
}
.bold{
  font-weight: 600;
}
.p-t-20{
  padding-top: 20px;
}
.p-r-20{
  padding-right: 20px;
}
.p-l-35{
  padding-left: 35px;
}
.opa-6{
  opacity: 0.6;
}
.opa-8{
  opacity: 0.8;
}
.bg-gray{
  background-color: #000000;
	width: 100%;
	height: 100%;
	top: 0;
	opacity: 0.6;
	transition: 0.5s;
	display: block;
	position: fixed;
	z-index: 506;
}

.p-15{
  padding: 15px;
}
.space-evenly{
  justify-content: space-evenly;
}
.space-between{
  justify-content: space-between;
}

.orange-text{
  color: 	#ff4500;
}
