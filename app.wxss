page {
  box-sizing: border-box;
}
.container{
  width: 100%;
  overflow-x: hidden;
  overflow-y: scroll;
}
.flex{
  display: flex;
}
.grid{
  display: grid;
}
.text{
  font-size: 1em;
}
.big-text{
  font-size: 1.3em;
}
.small-text{
  font-size: 0.8em;
}
.bold{
  font-weight: 600;
}
.p-t-20{
  padding-top: 20px;
}
.p-r-20{
  padding-right: 20px;
}
.p-l-20{
  padding-left: 20px;
}
.p-l-35{
  padding-left: 35px;
}
.m-t-10{
  margin-top: 10px;
}

.opa-3{
  opacity: 0.3;
}
.opa-6{
  opacity: 0.6;
}
.opa-8{
  opacity: 0.8;
}
.bg-gray{
  background-color: #000000;
	width: 100%;
	height: 100%;
	top: 0;
	opacity: 0.6;
	transition: 0.5s;
	display: block;
	position: fixed;
	z-index: 506;
}

.p-15{
  padding: 15px;
}
.space-evenly{
  justify-content: space-evenly;
}
.space-between{
  justify-content: space-between;
}
.center{
  align-items: center;
  text-align: center;
}
.orange-text{
  color: 	#ff4500;
}



/* popup */
.slide-popup{
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50%;
  z-index: 507;
}
.line{
  background-color:rgb(246,244,240);
  padding: 8px;
}
.line2{
  background-color:rgb(246,244,240);
  padding: 0.5px;
}