/* pages/mine/mine.wxss */
.mainClass{
  width: 100%;
  height: 100%;
}
.top-banner{
  height: 200px;
  background-color: rgba(245,245,245);
}
.top-banner image{
  width:100%;
  height:100px;
  margin-top:25px;
}
.top-container{
  width: 90%;
  height:85%;
  background: #fff;
  position: absolute;
  top:50px;
  left:20px;
  box-shadow: 0px 5px 10px 8px rgb(62 62 81 / 8%);
  border-radius: 10px;
}
.middle-container{
  margin-top: 50px;
}
.middle-row{
  padding: 20px;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 25px;
  border-radius: 50%;
}
.item-list{
  width:90%;
  display:flex;
  line-height: 3.5;
  border-bottom: 1px solid rgb(225, 225, 225);
  margin-left: 15px;
}
.item-name{
  font-size: 16px;
  font-weight: 600;
  opacity: 0.8;
  color: rgba(122, 122, 122);
}


