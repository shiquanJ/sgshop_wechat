/* pages/mine/userInfo/userInfo.wxss */
.main-box{
  background: linear-gradient(rgba(0, 0, 0, 0) 34.18%, rgba(0, 0, 0, 0.09) 100%) rgba(255, 255, 255, 0.5);
}
.item-box{
  width: 80%;
  height: 300px;
  border-radius:10px;
  position: absolute;
  top:30px;
  left:30px;
  padding: 10px;
  background-color: #fff;
  box-shadow: 0px 5px 10px 8px rgb(62 62 81 / 8%);
}
.item-image , .item-name {
  text-align: center;
  margin-top: 20px;
}
.item-image image{
  width: 80px;
  height: 80px;
  border-radius: 50px;
  border: 1px solid rgb(221, 227, 231);
}
.item-phoneNo{
  display:flex;
  margin-top: 30px;
}
.item-phoneNo .text1{
  color: #000;
  font-weight: 600;
}
.item-phoneNo text{
  margin-left:18px;
}
.item-phoneNo .text2{
  color: rgb(155, 164, 171);
}
.btn-modify-phone{
  width: 90px;
  color: rgb(255, 51, 51);
  text-align: center;
  font-size: 12px;
  border: 1px solid rgb(255, 51, 51);
  background: #fff;
  border-radius: 5px;
}







