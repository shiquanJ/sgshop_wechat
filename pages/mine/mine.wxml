<view class="mainClass">
  <view class="top-container">
    <view class='userinfo'>
      <image class="userinfo-avatar" src="{{avatarUrl}}"></image>
      <label class="text-default">{{nickName}}</label>
      <label class="text-default">{{phoneNo}}</label>
    </view>
    <view class="middle-container">
      <view class="item-list" bindtap="myInfo">
        <text class="item-name">我的信息</text>
      </view>
      <view class="item-list" bindtap="showModal">
         <text class="item-name">订单管理</text>
      </view>
      <view class="item-list" bindtap="goNewAddr">
         <text class="item-name">收货地址</text>
      </view>
    </view>
  </view>
