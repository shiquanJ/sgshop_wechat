/* pages/order/detail/detail.wxss */
page {
  background-color: #f8f8f8;
}

.card {
  margin: 20rpx auto;
  width: 96%;
  background-color: #fef9f4;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}

.card-title {
  width: 28rpx;
  padding:10rpx 15rpx 30rpx;
  background-color: #e891a0;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  opacity: 0.8;
}

.card-content {
  flex: 1;
  margin-left: 50rpx;
}


.card-code {
  font-size: 60rpx;
  margin-right: 40rpx;
}

.card-info-r {
  font-size: 24rpx;
  color: #e891a0;
}

.card-comment {
  color: #de5f4b;
  font-weight: 600;
  margin-top: 8rpx;
}

.card-tips {
  color: #a2a1a0;
  margin: 10rpx 0 20rpx;
  font-size: 24rpx;
}

.order {
  background-color: #fff;
  margin-top: 20rpx;
}
.order-number{
  color: #a2a1a0;
  font-size: 14px;
  padding: 24rpx;
  border-bottom: 1px solid #e3e3e3;
}
.order-title {
  font-size: 24rpx;
  color: #a2a1a0;
  padding: 24rpx;
  border-bottom: 1px solid #e3e3e3;
}

.order-list {
  padding: 0 30rpx;
}

.order-item {
  background-color: #fff;
  display: flex;
  font-size: 32rpx;
  padding: 25rpx 0;
  border-bottom: 1px solid #e3e3e3;
}

.order-item-l {
  flex: 1;
  display: flex;
}

.order-item-image {
  width: 94rpx;
  height: 94rpx;
  margin-right: 25rpx;
}

.order-item-number {
  color: #8f8f8f;
  margin-top: 4rpx;
  font-size: 30rpx;
}

.order-promotion-icon {
  display: inline-block;
  background-color: rgb(255, 145, 0);
  color: #fff;
  padding: 2rpx 6rpx 6rpx;
  font-size: 28rpx;
  margin-right: 8rpx;
}

.order-promotion-price {
  color: #f24;
}

.order-total-price {
  font-size: 40rpx;
  color: #f24;
}

.list {
  background-color: #fff;
  margin-top: 20rpx;
}

.list-title {
  font-size: 30rpx;
  color: #818181;
  padding: 20rpx;
  border-bottom: 1rpx solid #e3e3e3;
  display: flex;
}

.list-title:last-child {
  border-bottom: none;
}

.list-info {
  color: #000;
  margin-left: 20rpx;
}

.tips {
  width: 90%;
  height: 45px;
  text-align: center;
  margin: 20rpx auto;
  background: linear-gradient(to right,#fa6c9f 0,#ffe140 80%,#ffe140 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
}

.fixed{
  position: fixed;
  left: 5%;
  bottom: 0px;
}


.addr-item{
  width: 100%;
  display:flex;
  padding:10px;
  background-color: #fff;
}
.addr-start{
  width: 90%;
}
.addr-end{
  width: 10%;
  display: grid;
  align-items: center;
}
.addr-box{
 display: grid; 
 line-height: 2;
}
.addr-image{
  width: 20px;
  height: 20px;
  padding-right: 15px;
  margin-top: 5px;
}
.addr-icon{
  width:15px;
  height: 15px;
  opacity: 0.6;
  
}

/* 备注 */
.content-comment {
  padding: 10rpx 30rpx 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
  margin-bottom: 45px;
}

.content-comment>label {
  font-size: 24rpx;
  color: #a2a1a0;
}

.content-comment textarea {
  width: 95%;
  font-size: 24rpx;
  background-color: #f2f2f2;
  padding: 20rpx;
  height: 160rpx;
  margin-top: 10rpx;
  border-radius: 10rpx;
}